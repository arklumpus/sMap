              <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%" Opacity="0.75">
                <GradientStop Color="#a349a4" Offset="0"></GradientStop>
                <GradientStop Color="#3f48cc" Offset="0.167"></GradientStop>
                <GradientStop Color="#00a2e8" Offset="0.333"></GradientStop>
                <GradientStop Color="#22b14c" Offset="0.5"></GradientStop>
                <GradientStop Color="#ffd900" Offset="0.667"></GradientStop>
                <GradientStop Color="#ff7f27" Offset="0.833"></GradientStop>
                <GradientStop Color="#ed1c24" Offset="1"></GradientStop>
              </LinearGradientBrush>
            </Border.Background>
            <Border.RenderTransform>
              <ScaleTransform ScaleX="1" ScaleY="1"></ScaleTransform>
            </Border.RenderTransform>
            <ContentPresenter Content="{TemplateBinding Content}" Padding="{TemplateBinding Padding}" BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter.BorderBrush>
                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                  <GradientStop Color="#a349a4" Offset="0"></GradientStop>
                  <GradientStop Color="#3f48cc" Offset="0.167"></GradientStop>
                  <GradientStop Color="#00a2e8" Offset="0.333"></GradientStop>
                  <GradientStop Color="#22b14c" Offset="0.5"></GradientStop>
                  <GradientStop Color="#ffd900" Offset="0.667"></GradientStop>
                  <GradientStop Color="#ff7f27" Offset="0.833"></GradientStop>
                  <GradientStop Color="#ed1c24" Offset="1"></GradientStop>
                </LinearGradientBrush>
              </ContentPresenter.BorderBrush>
              
            </ContentPresenter>
          </Border>
        </ControlTemplate>
      </Setter>
    </Style>
