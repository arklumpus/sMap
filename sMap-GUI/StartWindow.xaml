  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1.5*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>
    <Grid Margin="10" Name="sMapTitle" Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Canvas Width="81" Height="60" ClipToBounds="True">
        <Path Stroke="#00a2e8" StrokeThickness="10" StrokeLineCap="Square" Data="M5,0 L25,60 M22,0 L42,60 M39,0 L59,60 M56,0 L76,60"></Path>
      </Canvas>
      <Canvas Grid.Column="1" Height="60" Background="#00a2e8">
        <Path Fill="#00a2e8" Data="M0,60 L0,0 L-25,0 Z"></Path>
      </Canvas>
      <Canvas ZIndex="-1" Grid.Column="2" Height="60">
        <Path Fill="#00a2e8" Data="M0,60 L25,60 L0,0 Z"></Path>
      </Canvas>
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock FontWeight="Bold" FontSize="36" Margin="5,3.5,0,0" Foreground="White">Welcome to sMap-GUI</TextBlock>
      </StackPanel>
      <Canvas Width="47" Height="60" ClipToBounds="True" Grid.Column="2">
        <Path Stroke="#00a2e8" StrokeThickness="10" StrokeLineCap="Square" Data="M5,0 L25,60 M22,0 L42,60"></Path>
      </Canvas>
    </Grid>
    <TextBlock Grid.Row="1" FontWeight="Bold" FontSize="30" Margin="20, 0, 0, 0" Grid.ColumnSpan="2">Choose action to perform:</TextBlock>

    <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="30" Padding="20" Classes="Rainbow" BorderThickness="5" Click="sMapWizardClicked" Name="sMapWizardButton">sMap Wizard</Button>

    <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Purple" BorderThickness="5" Click="sMapClicked">sMap (advanced mode)</Button>
    <Button Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Blue" BorderThickness="5" Click="NodeInfoClicked">Node Info</Button>
    <Button Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Green" BorderThickness="5" Click="PlotSMapClicked">Plot sMap</Button>
    <Button Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Cyan" BorderThickness="5" Click="StatSMapClicked">Stat sMap</Button>
    <Button Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Yellow" BorderThickness="5" Click="BlendSMapClicked">Blend sMap</Button>
    <Button Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Orange" BorderThickness="5" Click="MergeSMapClicked">Merge sMap</Button>
    <Button Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20, 10, 20, 10" Classes="Red" BorderThickness="5" Click="ScriptSMapClicked">Script sMap</Button>
  </Grid>
