<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="400" Height="110"
        x:Class="sMap_GUI.PlotProgressWindow"
        Title="Plotting..." FontFamily="resm:sMap_GUI.Fonts.?assembly=sMap-GUI#Open Sans" FontSize="15" HasSystemDecorations="False" WindowStartupLocation="CenterOwner" Opened="WindowOpened">
  <Border BorderBrush="Gray" BorderThickness="5">
    <Grid Name="MainGrid">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="1*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="50" />
      </Grid.ColumnDefinitions>
      <TextBlock Margin="10" HorizontalAlignment="Center" Grid.ColumnSpan="2" Name="ProgressText">Producing plot...</TextBlock>
      <ProgressBar Grid.Row="1" Margin="10,20,10,20" Maximum="1" Name="ProgressBar"></ProgressBar>
      <TextBlock Margin="0,0,10,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Name="ProgressDesc">0%</TextBlock>
    </Grid>
  </Border>
</Window>
